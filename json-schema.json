  "definitions": {
    "id": {
      "type": "string",
      "format": "uri",
      "title": "The object URL",
      "description": "Every object *must* carry a URL as ID"
    },
    "name": {
      "type": "string",
      "title": "The objects name",
      "description": "Every object *must* carry a name"
    },
    "shortName": {
      "type": [
        "string",
        "null"
      ],
      "title": "The objects abbreviated Name."
    },
    "license": {
      "type": [
        "string",
        "null"
      ],
      "format": "uri"
    },
    "keyword": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "web": {
      "type": [
        "string",
        "null"
      ],
      "format": "uri"
    },
    "deleted": {
      "type": "boolean",
      "default": false
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "modified": {
      "type": "string",
      "format": "date-time"
    },
    "OParlObject": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "shortName": {
          "$ref": "#/definitions/shortName"
        },
        "license": {
          "$ref": "#/definitions/license"
        },
