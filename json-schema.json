          "$ref": "#/definitions/deleted"
        },
        "created": {
          "$ref": "#/definitions/created"
        },
        "modified": {
          "$ref": "#/definitions/modified"
        }
      },
      "required": [
        "id",
        "type",
        "created",
        "modified"
      ]
    },
    "ObjectList": {
      "type": "object",
      "properties": {
        "pagination": {
          "type": "object",
